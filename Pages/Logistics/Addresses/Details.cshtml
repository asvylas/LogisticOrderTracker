@page
@model LogisticOrderTracker.Pages.Logistics.Addresses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="row">
    <h4>Address</h4>
    <hr />
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Address</h3>
            </div>
            <div class="panel-body">
                <div class="well">
                    <div>
                        Name: @Model.Address.Name
                    </div>
                    <div>
                        Street: @Model.Address.Street
                    </div>
                    <div>
                        City: @Model.Address.City
                    </div>
                    <div>
                        Zip: @Model.Address.Zip
                    </div>
                    <div>
                        Country: @Model.Address.Country
                    </div>
                </div>
                <a 
            type="button" 
            class="btn btn-default" 
            asp-page="./Contacts/Create"
            asp-route-address="@Model.Address.Id">Add Contact</a>
            </div>
            
        </div>
        
    </div>
    @foreach (var item in Model.Contacts)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Contact #@item.Id</h3>
                    </div>
                    <div class="panel-body">
                        <div class="well">
                            <div>
                                Name: @item.Name
                            </div>
                            <div>
                                Position: @item.JobTitle
                            </div>
                            <div>
                                Email: @item.Email
                            </div>
                        </div>
                        <div class="btn-group" role="group" aria-label="...">
                            <a 
                                type="button" 
                                class="btn btn-default" 
                                asp-page="./Contacts/Edit" 
                                asp-route-id="@item.Id" 
                                asp-route-address="@Model.Address.Id">Edit</a>
                            <a 
                                type="button" 
                                class="btn btn-default" 
                                asp-page="./Contacts/Delete" 
                                asp-route-id="@item.Id" 
                                asp-route-address="@Model.Address.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Address.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
