@model LogisticOrderTracker.Pages.Logistics.Addresses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Address</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Address.Name" class="control-label">Company</label>
            <input asp-for="Address.Name" class="form-control" />
            <span asp-validation-for="Address.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Street" class="control-label"></label>
            <input asp-for="Address.Street" class="form-control" />
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City" class="control-label"></label>
            <input asp-for="Address.City" class="form-control" />
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Zip" class="control-label"></label>
            <input asp-for="Address.Zip" class="form-control" />
            <span asp-validation-for="Address.Zip" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Country" class="control-label"></label>
            <input asp-for="Address.Country" class="form-control" />
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>
    </div>

</div>


<div class="form-group">
    <input type="submit" value="Create" id="create-address" class="btn btn-default" />
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<script src="~/js/address/createAddress.js" asp-append-version="true"></script>
