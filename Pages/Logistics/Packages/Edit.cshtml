@page
@model LogisticOrderTracker.Pages.Logistics.Packages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Package.Type" class="control-label"></label>
                <select asp-for="Package.Type" class="form-control" asp-items="Html.GetEnumSelectList<LogisticOrderTracker.Models.PackageType>()"></select>
                <span asp-validation-for="Package.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Length" class="control-label"></label>
                <input asp-for="Package.Length" class="form-control" />
                <span asp-validation-for="Package.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Width" class="control-label"></label>
                <input asp-for="Package.Width" class="form-control" />
                <span asp-validation-for="Package.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Height" class="control-label"></label>
                <input asp-for="Package.Height" class="form-control" />
                <span asp-validation-for="Package.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Weight" class="control-label"></label>
                <input asp-for="Package.Weight" class="form-control" />
                <span asp-validation-for="Package.Weight" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Package.Id" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Package.Active" /> @Html.DisplayNameFor(model => model.Package.Active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}